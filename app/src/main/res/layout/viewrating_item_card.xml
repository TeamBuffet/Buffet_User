<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/txtTopDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_margin="5dp"
                android:text="Ankit Maurya"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="03-11-2018"
                android:textAlignment="textEnd"
                android:layout_weight="0.5"
                android:textColor="@color/darkgrey"
                android:textSize="14sp" />


        </LinearLayout>


        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTopDetails"
            android:layout_marginLeft="5dp"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.5" />


        <TextView
            android:id="@+id/txtReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar"
            android:layout_margin="5dp"
            android:textColor="@color/darkgrey"
            android:text="It was the first time I placed an order from Bhookemon knowing that the food is pretty good as told by a few friends however I am completely happy as I received my order on time though Im residing bit away from the restaurant, even after I got the food with right temperature and well packed. I ordered Paneer Jalfarezi, Chicken malai tikka and Dal Makhni with some breads and Oreo Shake and Choco Brownie shake. Though I ordered for two and the quantity was sufficient for us. We like the food taste wise and quality wise both. Certainly we will other items in near future."
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_margin="3dp"
            android:background="@color/white"
            android:layout_below="@+id/txtReview">

            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="0.5"
                android:background="@color/light_green"
                android:textAlignment="center"
                android:text="Call Now"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAllCaps="false"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="0.5"
                android:background="@color/colorAccent"
                android:textAlignment="center"
                android:text="Share"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>