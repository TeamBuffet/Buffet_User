<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="1dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ankit Maurya"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtUserCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtUserName"
            android:layout_marginTop="3dp"
            android:text="Eating pizza here is always fun :) \n#PanPizza #Delicious"
            android:textColor="@color/darkgrey"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:alpha="0.7"
            android:text="12-10-2018"
            android:textColor="@color/darkgrey"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imgFeed"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@+id/txtUserCaption"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/image_pizza_sample" />


        <ImageButton
            android:id="@+id/imgLove"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/imgFeed"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_love_feed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgFeed"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="1024 Likes" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
